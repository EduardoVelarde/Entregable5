        <div class="row">
            <div class="d-flex flex-row border border-secondary border-1 m-2" >
        <div class=""> nombre de producto: {{this.name}}</div>
        <div class=" col border-start border-secondary border-1 ms-2"> precio de producto: {{this.price}}</div>
        </div>
        
        
        </div>
        <div class="row ">
            <img src="{{this.url}}" class="rounded float-start" style="width: 200px; height:200px" alt="">
        </div>
        
    </div>
    {{/each}}
