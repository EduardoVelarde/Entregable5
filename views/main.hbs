    
    <h1 class="mb-3">
        Carga tus productos en el siguiente formulario
    </h1>
    <div class="d-flex justify-content-center mb-5">
    <form action="products" method="post" class=" d-flex flex-column" style="width: 500px;">
        <label for="name" class="input-group-tex">Nombre del producto</label>
        <input type="text" name="name" id="name" class="form-control">
        <label for="price"class="input-group-tex" >Price</label>
        <input type="text" name="price" id="price" class="form-control">
        <label for="url" class="input-group-tex">Url</label>
        <input type="text" name="url" id="url" class="form-control">

        <input type="submit" value="SUBMIT" class="btn btn-success mt-3">
    </form>
    </div>
    <h1 class="mb-3">Products</h1>
    {{#each data}}
